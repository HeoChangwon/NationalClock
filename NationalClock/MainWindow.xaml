<Window x:Class="NationalClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NationalClock"
        mc:Ignorable="d"
        Title="{Binding WindowTitle, FallbackValue='National Clock'}" 
        Height="600" Width="900" MinHeight="400" MinWidth="600"
        Background="White"
        Topmost="{Binding IsAlwaysOnTop}"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Clock Item DataTemplate -->
        <DataTemplate x:Key="ClockItemTemplate">
            <Border Background="#F5F5F5" CornerRadius="8" Margin="8" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Flag/Emoji -->
                    <TextBlock Grid.Column="0" Text="{Binding TimeZone.FlagEmoji}" 
                               FontSize="32" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    
                    <!-- Clock Info -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{Binding TimeZone.DisplayName}" 
                                   FontSize="18" FontWeight="SemiBold" Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding FormattedTime}" 
                                   FontSize="24" FontWeight="Bold" 
                                   Foreground="#2196F3"/>
                        <TextBlock Text="{Binding DateString}" 
                                   FontSize="14" Foreground="#666666"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="{Binding WindowTitle}" 
                          FontSize="20" FontWeight="Medium"
                          Foreground="White" VerticalAlignment="Center"/>
                
                <!-- Control Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="12H/24H" Command="{Binding ToggleFormatCommand}" 
                           Margin="4" Padding="8,4" Background="Transparent" 
                           Foreground="White" BorderBrush="White"/>
                    <Button Content="Theme" Command="{Binding ToggleThemeCommand}" 
                           Margin="4" Padding="8,4" Background="Transparent" 
                           Foreground="White" BorderBrush="White"/>
                    <Button Content="Settings" Command="{Binding OpenSettingsCommand}" 
                           Margin="4" Padding="8,4" Background="Transparent" 
                           Foreground="White" BorderBrush="White"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Clock List -->
        <ScrollViewer Grid.Row="1" Margin="16">
            <ItemsControl ItemsSource="{Binding Clocks}"
                         ItemTemplate="{StaticResource ClockItemTemplate}">
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="16,8">
            <TextBlock Text="National Clock - Multi-timezone World Clock" 
                      FontSize="12" Foreground="#666666"/>
        </Border>
    </Grid>
</Window>